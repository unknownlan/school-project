        </svg>
        Hi Student</h5>
        <h5>The email address already exists in our system.</h5>
        <h5>Please use another email address to sign up.</h5>
    </div>
    <!-- END ALERT - Email already exists -->

    <!-- START SIGN UP HEADING -->
    <div class="container-fluid text-center py-3">
        <h2><b>SIGN UP AS STUDENT</b></h2>
    </div>
    <!-- END SIGN UP HEADING -->

    <!-- START SIGN UP FORM -->
    <div class="container-fluid  mx-auto mt-3 pt-4 mb-4 pb-3  " id="signup_box">
        <form action="create-student-account" method="post">
            <div class="row pb-3">
                <div class="col-10 mx-auto">
                    <label for="nameInput">Full name:</label>
                    <input type="text" class="form-control" name="nameInput" id="nameInput" required>
                </div>
            </div>
            <div class="row py-3">
                <div class="col-10 mx-auto">
                    <label for="emailInput">Email address:</label>
                    <input type="email" class="form-control" name="emailInput" id="emailInput" placeholder="example@gmail.com" required>
                </div>
            </div>
            <div class="row py-3">
                <div class="col-10 mx-auto">
                    <label for="passwordInput">Password:</label>
                    <input type="password" class="form-control" name="passwordInput" id="passwordInput" required>
                    <br>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" onclick="displayPassword()">
                        <label class="form-check-label" for="flexCheckDefault">Show password</label>
                    </div>
                </div>
            </div>
            <div class="row pt-3 pb-3">
                <div class="col-10 mx-auto">
                    <button type="submit" class="btn btn-primary  btn-block">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <!-- END SIGN UP FORM -->
</body>

<script>
    function displayPassword()
    {
        var input = document.getElementById("passwordInput");
        if(input.type === "password")
        {
            input.type = "text";
        }
        else
        {
            input.type = "password";
        }
    }

    var existingAccount = document.querySelector('#existingAccount');

    if(existingAccount.getAttribute('value') == "false")
    {
        document.getElementById('student_alert').style.display = 'none';
    }
    else
    {
        document.getElementById('student_alert').style.display = 'block';
    }
</script>

